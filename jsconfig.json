{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"preserveValueImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext"
	},
	"include": [
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.js",
		"./src/**/*.ts",
		"./tests/**/*.js",
		"./tests/**/*.ts",
	],
	"exclude": [
		"../node_modules/**",
	]
}